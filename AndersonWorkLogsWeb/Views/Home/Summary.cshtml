
@{
    ViewBag.Title = "Summary";
}

<h2>Summary</h2><br />

<div ng-controller="AttendanceController as model" ng-init="model.InitialiseSummary()">
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-hover table-sm table-bordered ">
                <thead>
                    <tr class="thead-inverse">
                        <th>User ID</th>
                        <th>Fullname</th>
                        <th>No. of Attendance</th>
                        <th>Total Hours</th>
                        <th>Manager Name</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="clickableRow" ng-repeat="attendance in model.Attendances" ng-click="$event.originalEvent.dropdown">
                        <td><span ng-bind="attendance.CreatedBy" /></td>
                        <td><span ng-bind="attendance.Employee.FullName" /></td>
                        <td><span ng-bind="attendance.NumberOfAttendances" /></td>
                        <td><span ng-bind="attendance.Hours|number:2" /></td>
                        <td><span ng-bind="attendance.Manager.FullName" /></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>